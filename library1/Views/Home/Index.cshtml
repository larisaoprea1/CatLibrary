        <div class="books-content">
            <section class="border">
                <section class="bookbg">
                    <img class="bookn1" src="../imageshtml/gonegirl.jpg">
                </section>
                <h3>Books</h3>
            </section>
            <section class="border">
                <section class="bookbg1">
                    <img class="bookn2" src="../imageshtml/shatterme.jpg">
                </section>
                <h3>Books</h3>
            </section>
            <section class="border">
                <section class="bookbg2">
                    <img class="bookn3" src="../imageshtml/harrypotter.jpg">
                </section>
                <h3>Books</h3>
            </section>
            <section class="border">
                <section class="bookbg3">
                    <img class="bookn4" src="../imageshtml/itendswithus.jpg">
                </section>
                <h3>Books</h3>
            </section>
